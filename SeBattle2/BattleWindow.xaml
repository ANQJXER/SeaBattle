<Window x:Class="SeBattle2.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle Mode" Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Player's Grid -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Your Ships" 
                       FontSize="20" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Grid x:Name="PlayerGrid" 
                  Height="600" 
                  Width="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>

        <!-- Right side - Enemy's Grid -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Enemy's Waters" 
                       FontSize="20" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Grid x:Name="EnemyGrid" 
                  Height="600" 
                  Width="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>
    </Grid>
</Window>